
<h1 class="h1-dashboard text-center mb-3">Welcome <%= @user.first_name %></h1>
<% if @user.chef %>
  <div class="text-center"><%= link_to "Make a new event", new_event_path, class: "btn btn-secondary mt-5 visible"%></div>
  <% else %>
    <div class="text-center"><%= link_to "Become a chef", chef_user_path(@user), method: :patch, class: "btn btn-secondary mt-5" %></div>
<% end %>
<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-chat/ava3.png" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">

            <h5 class="my-3"><%= @user.first_name + " "+ @user.last_name %></h5>
          </div>
        </div>
        <div class="card mb-4 mb-lg-0">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
            
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fab fa-github fa-lg" style="color: #333333;"></i>
                <p class="mb-0">www.github.com</p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fab fa-twitter fa-lg" style="color: #55acee;"></i>
                <p class="mb-0">https://twitter.com</p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                <p class="mb-0">https://facebook.com</p>

              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">First Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.first_name%></p>

              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">

                <p class="mb-0">Last Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.last_name%></p>
              </div>
            </div>
            
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.email%></p>

              </div>
            </div>
          </div>
        </div>
         
           <ul class="nav nav-tabs" id="myTab" role="tablist">
             <li class="nav-item">
                  <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Guest vents</a>
                  </li>
                 <% if @user.chef %>
                   <li class="nav-item">
                     <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Chef events</a>
                   </li>
                 <% end %>
            </ul>
               <div class="tab-content" id="myTabContent">
                 <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">     
                    <div class="row">
                      <div class="col-md-12">
                        <div class="card mb-4 mb-md-0">
                          <div class="card-body">
                            <% @user.events.each do |event| %>
                            <%= link_to event_path(event), class:'text-decoration-none' do %>
                              <div class="card-product">
                                    <div class="card-product-infos">
                                      <h2><%= event.name %></h2>
                                      <p><%= event.location %></p>
                                      <p><%= event.start_time %></p>
                                      <p><%= event.end_time %></p>
                                    </div>
                              </div>
                            <% end %>
                           <% end %>
                          </div>
                        </div>
                      </div>
                  </div>


                </div>
                 <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                 
                  <% if @user.chef %>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="card mb-4 mb-md-0">
                          <div class="card-body">
                            <% @user.events.each do |event| %>
                            <%= link_to event_path(event), class:'text-decoration-none' do %>
                              <div class="card-product">
                                    <div class="card-product-infos">
                                      <h2><%= event.name%></h2>
                                      <p><%= event.description %></p>
                                    </div>
                               </div>
                            <% end %>
                           <% end %>
                          </div>
                        </div>
                      </div>
                  </div>
              <% end %>
         </div>
            
  </div>
</section>

           
